<% include ../layouts/header %>
    <h1>Refer Connection</h1>
    <small>Job: <%- listing.title %></small>
    <br><br>
    <form action="/listings/<%- listing.id %>/new" method="post" class="form">
        <input type="hidden" name="referrerId" value="<%- user.id %>">
        <input type="hidden" name="listingId" value="<%- listing.id %>">
        <div class="form-group">
            <label for="referredId">Referred Connection</label>
            <select name="referredId" id="referredId" class="form-control">
                <% for(let connection of connections) {%>
                    <% if(connection.firstUser.id === user.id) { %>
                        <option value="<%- connection.secondUser.id %>"><%- connection.secondUser.firstName %>  <%- connection.secondUser.lastName  %></option>
                    <% } else {%>
                        <option value="<%- connection.firstUser.id %>"><%-  connection.firstUser.firstName %> <%- connection.firstUser.lastName%></option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="message">Message for Company</label>
            <textarea name="message" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
<% include ../layouts/footer %>